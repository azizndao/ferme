<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="personne" alignment="TOP_CENTER"
      prefWidth="260" spacing="10.0" stylesheets="/css/Personne.css"
      xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.groupeone.ferme.controllers.PersonneController">

  <ImageView fx:id="imageView" fitWidth="260" fitHeight="200" pickOnBounds="true"/>
  <Label fx:id="nomField"/>
  <Label fx:id="statusComboBox"/>
  <Label fx:id="emailField"/>
  <Label fx:id="telephoneField"/>
  <Label fx:id="salaireField"/>
  <Button fx:id="modifier" text="Modifier" onAction="#voirPlus" styleClass="btn,danger,outline">
    <cursor>
      <Cursor fx:constant="HAND"/>
    </cursor>
  </Button>
</VBox>
