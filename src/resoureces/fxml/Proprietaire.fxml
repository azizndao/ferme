<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<HBox stylesheets="@../css/Proprietaire.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.groupeone.ferme.controllers.ProprietaireController">

  <VBox fx:id="sidebar" alignment="CENTER" prefWidth="325" spacing="8" GridPane.vgrow="ALWAYS">
    <Label fx:id="appName" alignment="CENTER" contentDisplay="CENTER" prefHeight="75" text="Ferme Laitiere"/>
    <Separator prefWidth="200.0"/>
    <Button styleClass="destination-item, active" text="Personnels">
      <cursor>
        <Cursor fx:constant="HAND"/>
      </cursor>
    </Button>
    <Button styleClass="destination-item" text="Stock">
      <cursor>
        <Cursor fx:constant="HAND"/>
      </cursor>
    </Button>
    <Button styleClass="destination-item" text="Sante">
      <cursor>
        <Cursor fx:constant="HAND"/>
      </cursor>
    </Button>
    <Button styleClass="destination-item" text="Transaction">
      <cursor>
        <Cursor fx:constant="HAND"/>
      </cursor>
    </Button>
    <Button styleClass="destination-item" text="Finance">
      <cursor>
        <Cursor fx:constant="HAND"/>
      </cursor>
    </Button>
    <Button styleClass="destination-item" text="Stats. vaches">
      <cursor>
        <Cursor fx:constant="HAND"/>
      </cursor>
    </Button>
    <Separator prefWidth="200.0"/>
    <ImageView fx:id="userImage" fitHeight="60" fitWidth="60">
      <Image url="/images/avatar.png"/>
    </ImageView>
    <Label fx:id="userName" text="Abdou Aziz Ndao"/>
    <Label fx:id="userEmail" text="azizndao71@gmail.com"/>
    <HBox alignment="CENTER" spacing="50">
      <Button text="Deconnecter" fx:id="signOutButton" onAction="#signOut">
        <cursor>
          <Cursor fx:constant="HAND"/>
        </cursor>
      </Button>
      <Button fx:id="showAccountButton" text="Compte" onAction="#showAccount">
        <cursor>
          <Cursor fx:constant="HAND"/>
        </cursor>
      </Button>
    </HBox>
  </VBox>
  <VBox fx:id="content">
    <fx:include source="Personnels.fxml"/>
  </VBox>
</HBox>
